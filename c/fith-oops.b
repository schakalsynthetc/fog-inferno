die (status: string, msg: string)
{ 
	Xstatus:=" :oops: /"+pid+"/p : /"+progname+"/"+status+"/t "; 
	sys->fprint(stderr, "%s : %s ;\n", Xstatus, msg); 
	raise Xstatus; 
}

